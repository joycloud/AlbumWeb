</div>

<p></p>
<div id="dropDIV" ondragover="dragoverHandler(event)" ondrop="dropHandler(event)">
    <div style="text-align:center">Drop files here</div>
    <div id="imgDIV"></div>
</div>

<script src="~/js/tools/picTools.js"></script>
