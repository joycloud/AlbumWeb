


<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
<link href="~/css/login.css" rel="stylesheet" />

<div id="app">
    <section class="ftco-section">
        <div class="container">
            <br>
            <br>
            <br>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap p-0">
                        <h3 class="mb-4 text-center">{{title}}</h3>
                        <form action="" class="signin-form" method="post">
                            <div class="form-group">
                                <input type="text" class="form-control" name="account" :placeholder="remind.account" required>
                            </div>
                            <div class="form-group">
                                <input id="password-field" type="password" class="form-control" name="password" :placeholder="remind.password"
                                       required>
                                <span toggle="#password-field"
                                      class="fa fa-fw fa-eye field-icon toggle-password"></span>
                            </div>
                            <!-- 登入 -->
                            <div class="form-group">
                                <button type="submit" class="form-control btn btn-primary submit px-3">Sign In</button>
                            </div>
                            <div class="form-group d-md-flex">
                                <div class="w-50">
                                    <label class="checkbox-wrap checkbox-primary">
                                        Remember Me
                                        <input type="checkbox" checked>
                                        <span class="checkmark"></span>
                                    </label>
                                </div>
                                <div class="w-50">
                                    <a :href="backPath" style="color: #fff">Back to index</a>
                                </div>
                            </div>
                        </form>
                        <p class="w-100 text-center">&mdash; Or Sign In With &mdash;</p>
                        <div class="social d-flex text-center">
                            <a href="#" class="px-2 py-2 mr-md-1 rounded">
                                <span class="ion-logo-facebook mr-2"></span>
                                Facebook
                            </a>
                            <a href="#" class="px-2 py-2 ml-md-1 rounded">
                                <span class="ion-logo-twitter mr-2"></span>
                                Twitter
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<script src="~/js/vueJs/login.js"></script>